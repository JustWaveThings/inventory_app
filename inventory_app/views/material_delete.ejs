<%- include('../partials/head') %> <%- include('../partials/header') %><%-
include('../partials/nav') %> <%# content goes here.... %>

<h4><%= title %></h4>

<ul>
  <li>Material: <%= item.name %></li>
</ul>

<% if (rolls.length > 0) { %>
<p>
  <strong
    >Delete the following filament rolls before attempting to delete this
    material.</strong
  >
</p>
<dl>
  <% rolls.forEach(roll => { %>
  <dt>
    <a href="<%= roll.url %>"
      ><%= roll.brand.name %> - <%= roll.material.name %> - <%= roll.color %></a
    >
  </dt>

  <% }); %>
</dl>

<% } else { %>
<p>Do you really want to delete this material?</p>
<form method="POST" action="">
  <div class="form-group">
    <input
      id="material"
      class="form-control"
      type="hidden"
      name="material"
      required="true"
      value="<%= item._id %>"
    />
  </div>
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<% } %> <%- include('../partials/footer') %>
